<%- include('partials/header'); -%>

    <% allData.forEach((element)=> { %>
        <h1 class="text-capitalize text text-center m6">Send money to <%= element.name %>
        </h1>
        <% }) %>
            <table class="table table-striped table-hover bgColour">
                <thead>
                    <tr>
                        <th scope="col">Account No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Balance</th>
                        <th scope="col">Email</th>
                        <th scope="col">mobileNo</th>
                        <th scope="col">adhareNo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% allData.forEach((element)=> { %>
                            <td>
                                <%= element._id %>
                            </td>
                            <td class="text-capitalize">
                                <%= element.name %>
                            </td>
                            <td>
                                &#x20B9;<%= element.left %>
                            </td>
                            <td>
                                <%= element.email %>
                            </td>
                            <td>
                                <%= element.mobileNo %>
                            </td>
                            <td>
                                <%= element.adhareNo %>
                            </td>
                            <% }); %>
                    </tr>
                </tbody>
            </table>


            <% allData.forEach((element)=> { %>
                <% var requestedId=element._id %>
                    <div class="mb-3">
                        <span">
                            lastTransfer : <%= element.updatedTime %>
                                </span>
                    </div>

                    <form action="/pay" method="post">
                        <div class="form-floating">
                            <label for="floatingTextarea0" class="form-label"></label>
                            <input type="text" id="floatingTextarea0" class="form-control"
                                placeholder="Write Amount here" name="targetMoney">
                            <label for="floatingTextarea1">Amount to transfer</label>
                            <textarea class="form-control" placeholder="" id="floatingTextarea1"
                                name="targetMoneyId"><%= element.id %></textarea>

                            <label for="floatingTextarea2"></label>
                            <textarea class="form-control" placeholder="name" id="floatingTextarea2"
                                name="targetMoneyName"><%= element.name %></textarea>

                        </div> <br>
                        <button type="submit" class="btn btn-primary">Transfer</button>
                    </form>

                    <% }) %>
                        <%- include('partials/footer'); -%>